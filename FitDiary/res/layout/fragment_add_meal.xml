<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="328dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/add_meal_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Étkezés hozzáadása"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/add_meal_fragment_meal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_meal_fragment_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Étkezés neve" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/add_meal_fragment_meal_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/add_meal_fragment_meal_name"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="21dp"
            android:ems="10" />

        <EditText
            android:id="@+id/add_meal_fragment_meal_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/add_meal_fragment_meal_date"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/add_meal_fragment_meal_date"
            android:ems="10" />

        <LinearLayout
            android:id="@+id/add_meal_fragment_food_container_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/add_meal_fragment_meal_date"
            android:layout_below="@+id/add_meal_fragment_meal_date"
            android:layout_marginTop="43dp"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:id="@+id/add_meal_fragment_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_meal_fragment_food_container_view"
            android:layout_centerHorizontal="true"
            android:text="Button" />
    </RelativeLayout>

</ScrollView>